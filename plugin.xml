<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
           id="cordova-plugin-run-node"
      version="1.1.0">

  <name>run Node framework</name>
  <description>run Node framework, base on nodejs-mobile-cordova</description>
  <license>MIT</license>
  <keywords>cordova,mobile,nodejs,node.js,node</keywords>
  
  <dependency id="nodejs-mobile-cordova" version="^0.2.0" />

  <js-module src="www/runNode.js" name="runNode">
    <clobbers target="runNode" />
  </js-module>

  <!-- ios -->
  <platform name="ios">
  
    <source-file src="install/www/nodejs-project/" target-dir="www/"/>

  </platform>

  <!-- android -->
  <platform name="android">
	
    <source-file src="install/www/nodejs-project/" target-dir="assets/www/"/>

  </platform>

</plugin>
